{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react-native",
        "noEmit": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./", /* Base directory to resolve non-absolute module names. */
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "./*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}